const setInWindow = require("setInWindow");
const callInWindow = require("callInWindow");
const injectScript = require("injectScript");
const getContainerVersion = require("getContainerVersion");
const logToConsole = require("logToConsole");
const containerVersion = getContainerVersion();
const sampleRate = data.sampleRate;
const defaultPermissions = data.defaultPermissions.map(defaultPermission=>defaultPermission.permissionCode);
const useIntegration = data.useIntegration;
const integration = data.integration;
let settings = {
		endpoint: "https://controle.consentmonitor.nl",
		sampleRate: sampleRate
};

if(useIntegration){
	settings.defaultPermissions =defaultPermissions;
	settings.integration =integration;
}
setInWindow("__cm_settings",settings);

injectScript("https://cdn.harvest.graindata.com/assets/consent-monitor/consent-monitor.js",()=>{
  if(containerVersion.debugMode){
      callInWindow("harvestConsentMonitor.startDebug");
  }
 data.gtmOnSuccess();
},()=>{
 data.gtmOnFailure();
});


